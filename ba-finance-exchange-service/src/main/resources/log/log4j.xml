<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	threshold="null" debug="null">
    <!--<appender name="CONSOLE" class="com.dianping.combiz.misc.ExtendedConsoleAppender">-->
    <!--<param name="Target" value="System.out" />-->
    <!--<layout class="org.apache.log4j.PatternLayout">-->
    <!--<param name="ConversionPattern" value="[ba-finance-settle-biz]%d %-5p [%c] %m%n" />-->
    <!--</layout>-->
    <!--</appender>-->

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
        </layout>
    </appender>

	<appender name="avatarAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/ba-finance-exchange-service/logs/avatar.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="appAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- <param name="Threshold" value="INFO" /> -->
		<param name="File" value="/data/applogs/ba-finance-exchange-service/logs/app.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

    <appender name="statisticAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/ba-finance-exchange-service/s-logs/statistic.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
        </layout>
    </appender>

    <appender name="monitorAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/ba-finance-exchange-service/m-logs/monitor.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
        </layout>
    </appender>

	<appender name="ibatisAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- <param name="Threshold" value="INFO" /> -->
		<param name="File" value="/data/applogs/ba-finance-exchange-service/logs/ibatis.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>
	
	<appender name="illegalAccessAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/ba-finance-exchange-service/logs/illegalAccess.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="illegalParameterAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/ba-finance-exchange-service/logs/illegalParameter.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ba-finance-exchange-service]%d %-5p [%c %L] %m%n" />
		</layout>
	</appender>
	
	<appender name="HAWK" class="com.dianping.hawk.HawkAppender">
		<param name="key1" value="info-search" />
		<param name="key2" value="web" />
		<param name="cacheTimeMillis" value="10000" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %x - %m%n" />
		</layout>
	</appender>
	
	<appender name="catAppender" class="com.dianping.cat.log4j.CatAppender">
	</appender>

	<logger name="com.ibatis" additivity="false">
		<level value="WARN" />
		<!-- <appender-ref ref="CONSOLE" /> -->
		<appender-ref ref="ibatisAppender" />
	</logger>

	<logger name="java.sql">
		<level value="WARN" />
	</logger>
	
	<logger name="org.springframework.jms">
		<level value="ERROR" />
	</logger>
	
	<logger name="org.apache.activemq">
		<level value="ERROR" />
	</logger>
	
	<logger name="org.apache.struts2">
		<level value="ERROR" />
	</logger>
	
		<logger name="com.opensymphony.xwork2.ognl.OgnlValueStack" additivity="false">
		<level value="ERROR" />
		<!-- <appender-ref ref="CONSOLE" />  -->
		<appender-ref ref="illegalParameterAppender" />
	</logger>
	
	<logger name="org.apache.struts2.dispatcher.Dispatcher"	additivity="false">
		<level value="WARN" />
		<!-- <appender-ref ref="CONSOLE" /> -->
		<appender-ref ref="illegalAccessAppender" />
	</logger>
	
	<logger name="com.dianping.avatar" additivity="false">
		<!-- <appender-ref ref="CONSOLE" /> -->
		<appender-ref ref="avatarAppender" />
		<appender-ref ref="HAWK" />
	</logger>
	<logger name="com.dianping.lion.client.ConfigCache" additivity="false">
		<level value="ERROR" />
	</logger>
	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="appAppender" />
		<appender-ref ref="HAWK" />
		<appender-ref ref="catAppender" />
	</root>

</log4j:configuration>
