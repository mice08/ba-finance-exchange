<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="MonitorException">
    <typeAlias alias="ExceptionData" type="com.dianping.ba.finance.exchange.receivemonitor.api.datas.ExceptionData"/>
    <resultMap id="exceptionData" class="ExceptionData">
        <result property="exceptionId" column="ExceptionID"/>
        <result property="roId" column="ROID"/>
        <result property="exceptionType" column="ExceptionType"/>
        <result property="addDate" column="AddDate"/>
        <result property="status" column="Status"/>
    </resultMap>

    <insert id="insertMonitorException" parameterClass="map">
        INSERT INTO FC_ReceiveMonitorException
        (ROID,
        ExceptionType,
        AddDate,
        Status)
        VALUES (
        #exceptionData.roId#,
        #exceptionData.exceptionType#,
        #exceptionData.addDate#,
        #exceptionData.status#)
        <selectKey resultClass="java.lang.Integer" keyProperty="ExceptionID">
            SELECT @@IDENTITY AS id
        </selectKey>
    </insert>

    <select id="findExceptions" resultMap="exceptionData" parameterClass="map">
        SELECT ExceptionID,
               ROID,
               ExceptionType,
               AddDate,
               Status
        FROM FC_ReceiveMonitorException
        WHERE status = #status#
    </select>

    <update id="updateStatus" parameterClass="map">
        UPDATE FC_ReceiveMonitorException
        SET Status = #setStatus#
        WHERE Status = #preStatus#
        AND ExceptionID IN
        <iterate open="(" close=")" conjunction="," property="exceptionIdList">
            #exceptionIdList[]#
        </iterate>
    </update>
</sqlMap>