<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="ajax" namespace="/exchange/ajax" extends="default">

        <action name="payorderlist"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.PayOrderAjaxAction">
            <result type="json"></result>
        </action>

        <action name="loadPOStatusOption"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.LoadOptionAction"
                method="loadPOStatusOption">
            <result type="json"></result>
        </action>

        <action name="loadBusinessTypeOption"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.LoadOptionAction"
                method="loadBusinessTypeOption">
            <result type="json"></result>
        </action>

        <action name="payconfirm"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.PaySuccessAjaxAction"
                method="submitPaySuccess">
            <result type="json"></result>
        </action>

        <action name="importRefund"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.ImportRefundAjaxAction"
                method="importRefund">
            <result type="json"></result>
        </action>

        <action name="addReceiveOrderManually"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.ReceiveOrderAjaxAction"
                method="createReceiveOrderManually">
            <result type="json"></result>
        </action>


        <action name="loadReceiveBankOption"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.LoadOptionAction"
                method="loadReceiveBankOption">
            <result type="json"></result>
        </action>

        <action name="loadReceiveOrderPayChannelOption"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.LoadOptionAction"
                method="loadReceiveOrderPayChannelOption">
            <result type="json"></result>
        </action>

        <action name="loadReceiveTypeOption"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.LoadOptionAction"
                method="loadReceiveTypeOption">
            <result type="json"></result>
        </action>

        <action name="findCustomerNameSuggestion"
                class="com.dianping.ba.finance.exchange.siteweb.action.ajax.CustomerAjaxAction"
                method="findCustomerNameSuggestion">
            <result type="json"></result>
        </action>
    </package>

</struts>